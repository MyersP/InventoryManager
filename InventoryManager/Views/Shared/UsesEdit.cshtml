@using InventoryManager.DataAccess
@using InventoryManager.Models
@model InventoryManager.Models.SharedInfoModel


<div class="SharedAttribute">
    <div class="label">Garment Use: </div>
    <span class="NewItems">
        <label for="NewColor" class="input-label">New Garment Use: </label>
        <input id="AddNewUse" class="InputText" maxlength="100" name="NewColor" type="text" value=""/>
        @Html.DropDownListFor(m => m.UsesModel,
                            new SelectList(Model.UsesModel.OrderBy(x => x.Uses),
                                           new DataHelpers().GetNamesFromModel(new UsesModel()).FirstOrDefault(),
                                           new DataHelpers().GetNamesFromModel(new UsesModel()).Last(),
                                           Model.UsesModel))
    </span>
    <span class="SharedAttributeButtons">
        <input class="ButtonChoice" id="UseNew" type="button" value="Add New >" />
        <input class="ButtonChoice" id="UseAdd" type="button" value="Add >" />
        <input class="ButtonChoice" id="UseRemove" type="button" value="< Remove" />
    </span>
    @Html.ListBox("UsesNameList", new SelectList(new[] { "" }), new { @class = "ModelInput" })
</div>
