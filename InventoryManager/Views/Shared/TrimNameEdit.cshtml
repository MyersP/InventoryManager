@using InventoryManager.DataAccess
@using InventoryManager.Models
@model InventoryManager.Models.SharedInfoModel

<div class="SharedAttribute">
    <div class="label">Trim: </div>
    <span class="NewItems">
        <label for="NewTrim" class="input-label">New Trim: </label>
        <input id="AddNewTrim" class="InputText" maxlength="100" name="NewTrim" type="text" value=""/>
        @Html.DropDownListFor(m => m.TrimModel,
                            new SelectList(Model.TrimModel.OrderBy(x => x.TrimName),
                                           new DataHelpers().GetNamesFromModel(new TrimModel()).FirstOrDefault(),
                                           new DataHelpers().GetNamesFromModel(new TrimModel()).Last(),
                                           Model.TrimModel))                
    </span>
    <span class="SharedAttributeButtons">
        <input class="ButtonChoice" id="TrimNew" type="button" value="Add New >" />
        <input class="ButtonChoice" id="TrimAdd" type="button" value="Add >" />
        <input class="ButtonChoice" id="TrimRemove" type="button" value="< Remove" />
    </span>
    @Html.ListBox("TrimList", new SelectList(new[] { "" }), new { @class = "ModelInput" })                                  
</div>
