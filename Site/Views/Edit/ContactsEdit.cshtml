@using System.Web.Mvc.Html
@using InventoryManager.DataAccess
@using InventoryManager.Models
@model ContactsFullModel

@{
    Layout = "../Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
    <head>
        <link href="@Url.Content("~/Content/ContactsEdit.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/ContactsShared.css")" rel="stylesheet" type="text/css" />
        <title>title</title>
        
    </head>
    <body>
    <div id="Content" class="ContactsForm">
            
        @using (Html.BeginForm("contact", "update")) 
        {
            <h1>EDIT Contact inforamtion for @Model.FirstName @Model.LastName </h1> 
           
            <div class="Section">
                <label  for="FirstName" class="input-label">First name: </label>
                <input name="FirstName" type="text"  value="@Model.FirstName"/>
                <label  for="LastName" class="input-label">Last name: </label>
                <input name="LastName" type="text"  value="@Model.LastName"/>
                        
                <div>
                    <div id="CustomerTypeListLabel">Customer Type: </div>
                    @Html.DropDownListFor(m => m.CustomerType,
                         new SelectList(Model.CustomerTypeList.OrderBy(x => x.CustomerType),
                  new DataHelpers().GetNamesFromModel(new ContactType()).FirstOrDefault(),
                                        new DataHelpers().GetNamesFromModel(new ContactType()).Last(),
                                           Model.CustomerTypeList))
                    @*Example of multiselect
                     @Html.ListBoxFor(m => m.CustomerTypeList, SelectList(Model.CustomerTypeList, "CustomerType", "CustomerType"), new { Multiple = "multiple" })*@

                    <label for="EmailAddress" class="input-label">Email Address: </label>
                    <input maxlength="100" name="EmailAddress" type="text" value="@Model.EmailAddress"/>
                </div>
                <div>
                    <label for="MobleNumber" class="input-label">Mobile Number: </label>
                    <input maxlength="100" name="MobleNumber" type="text" value="@Model.MobleNumber"/>
                                         
                    <label for="PhoneNumber" class="input-label">Phone Number: </label>
                    <input maxlength="100" name="PhoneNumber" type="text" value="@Model.PhoneNumber"/>
                </div>
                <div>
                    <label for="BillingAddress" class="input-label">Address: </label>
                    <input maxlength="100" name="BillingAddress" type="text"  value="@Model.BillingAddress"/>

                    <label for="City" class="input-label">City / Town: </label>
                    <input maxlength="100" name="City" type="text"  value="@Model.City"/>
                </div> 
                <div>             
                    <label for="StateOrProvince" class="input-label">State: </label>
                    <input maxlength="100" name="StateOrProvince" type="text"  value="@Model.StateOrProvince"/>
                
                    <label for="CountryRegion" class="input-label">Country: </label>
                    <input maxlength="100" name="CountryRegion" type="text"  value="@Model.CountryRegion"/>
                </div>
                <div>              
                    <label for="PostalCode" class="input-label">Zip: </label>
                    <input maxlength="100" name="PostalCode" type="text"  value="@Model.PostalCode"/>
                </div>
            </div>
            <input type="text" value="@Model.ID" class="ID" name="ID"/>     

            <input id="ButtonSave" type="submit" value="Save" />

        }
        
        @using (Html.BeginForm("contact", "Delete"))
        {
                    
            <input type="text" value="@Model.ID" class="ID" name="ID"/>  
            <input id="ButtonDelete" type="submit" value="Delete" />
        }
                
        @using (Html.BeginForm("contact", "View"))
        {
            <input type="text" value="@Model.ID" class="ID" name="ID"/> 
            <input id="ButtonCancel" type="submit" value="Cancel" />
        }
    </div>
    </body>
</html>

  
    
